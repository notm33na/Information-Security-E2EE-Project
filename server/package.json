{
  "name": "infosec-server",
  "version": "1.0.0",
  "type": "module",
  "description": "Secure backend server with HTTPS and WebSockets",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "generate-keys": "node scripts/generate-keys.js",
    "test": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:msg": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand --testTimeout=30000 client/tests server/tests"
  },
  "keywords": [
    "express",
    "mongodb",
    "websocket",
    "https"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "infosec-monorepo": "file:..",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "selfsigned": "^2.1.1",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "transform": {},
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/config/**"
    ],
    "coverageDirectory": "coverage",
    "verbose": true,
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
